<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Taskie" parent="android:Theme.Material.Light.NoActionBar" />


    <style name="TaskieDateTimePickerTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
